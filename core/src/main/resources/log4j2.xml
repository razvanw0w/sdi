<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="filename">./log/core.log</Property>
        <Property name="filenamePattern">log/core-%i.log</Property>
        <Property name="pattern">%d{ISO8601} %-5p [%t]: %-36.36c{1} - %m %n
        </Property>
    </Properties>
    <Loggers>
        <!-- Spring framework -->
        <!--        <Logger name="org.hibernate.stat" level="INFO" />-->
        <Logger name="org.springframework.data" level="WARN"/>
        <Logger name="org.springframework.web" level="WARN"/>
        <Logger name="org.springframework.http.converter.json" level="WARN"/>
        <Logger name="com.fasterxml.jackson.databind" level="WARN"/>
        <Logger name="ro.sdi.lab24.core" level="TRACE"/>

        <!-- ROOT -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

    </Loggers>

    <Appenders>
        <!-- ======= -->
        <!-- CONSOLE -->
        <!-- ======= -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern=""/>
        </Console>
        <!-- ========= -->
        <!-- ROOT File -->
        <!-- ========= -->
        <RollingFile name="File" fileName="${filename}"
                     filePattern="${filenamePattern}">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
</Configuration>